{{< layout}}

{{$content}}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">Error {{status}}</h3>
                </div>
                <div class="card-body">
                    <h4>{{error}}</h4>
                    <p>{{message}}</p>
                    
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">Volver al inicio</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/content}}

{{/layout}} 