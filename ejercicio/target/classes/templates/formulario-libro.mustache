{{< layout}}

{{$content}}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">{{#libro}}{{#id}}Editar{{/id}}{{^id}}Nuevo{{/id}}{{/libro}}{{^libro}}Nuevo{{/libro}} Libro</h3>
            </div>
            <div class="card-body">
                <form action="{{#libro}}{{#id}}/libros/{{id}}/editar{{/id}}{{^id}}/libros/nuevo{{/id}}{{/libro}}{{^libro}}/libros/nuevo{{/libro}}" method="post">
                    {{#libro}}
                    {{#id}}
                    <input type="hidden" name="id" value="{{id}}">
                    {{/id}}
                    {{/libro}}

                    <div class="mb-3">
                        <label for="titulo" class="form-label">Título</label>
                        <input type="text" class="form-control" id="titulo" name="titulo" {{#libro}}value="{{titulo}}"{{/libro}} required>
                    </div>

                    <div class="mb-3">
                        <label for="descripcion" class="form-label">Descripción</label>
                        <textarea class="form-control" id="descripcion" name="descripcion" rows="4" required>{{#libro}}{{descripcion}}{{/libro}}</textarea>
                    </div>

                    {{#libro}}
                    {{#id}}
                    <div class="mb-3">
                        <label class="form-label">Ejemplares Vendidos</label>
                        <input type="text" class="form-control" value="{{ejemplaresVendidos}}" readonly>
                    </div>
                    {{/id}}
                    {{/libro}}

                    <div class="d-flex justify-content-between">
                        <a href="/libros" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/content}}

{{/layout}} 