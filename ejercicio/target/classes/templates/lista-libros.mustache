{{< layout}}

{{$content}}
<div style="margin-bottom: 20px;">
    <h3>Libros disponibles</h3>
    <a href="/libros/nuevo" class="btn btn-primary" style="background-color: #4a90e2;">Añadir libro</a>
</div>

<table class="table table-bordered">
    <thead style="background-color: #f8f9fa;">
        <tr>
            <th>#</th>
            <th>Título</th>
            <th>Descripción</th>
            <th>Vendidos</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        {{#libros}}
        <tr>
            <td>{{id}}</td>
            <td><b>{{titulo}}</b></td>
            <td>{{descripcion}}</td>
            <td>{{ejemplaresVendidos}}</td>
            <td>
                <a href="/libros/{{id}}/editar" class="btn btn-sm" style="background-color: #ffd700;">Editar</a>
                <form action="/libros/{{id}}/eliminar" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-sm" style="background-color: #ff6b6b;">Borrar</button>
                </form>
                <form action="/libros/{{id}}/comprar" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-sm" style="background-color: #82c91e;">Comprar</button>
                </form>
            </td>
        </tr>
        {{/libros}}
        {{^libros}}
        <tr>
            <td colspan="5" style="text-align: center; padding: 20px;">
                No hay libros todavía
            </td>
        </tr>
        {{/libros}}
    </tbody>
</table>
{{/content}}

{{/layout}} 