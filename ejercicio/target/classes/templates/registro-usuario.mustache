{{< layout}}

{{$content}}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Registro de Usuario</h3>
            </div>
            <div class="card-body">
                {{#error}}
                <div class="alert alert-danger">{{.}}</div>
                {{/error}}

                <form action="/usuarios/registro" method="post">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>

                    <div class="mb-3">
                        <label for="tipoUsuario" class="form-label">Tipo de Usuario</label>
                        <select class="form-select" id="tipoUsuario" name="tipoUsuario" required onchange="mostrarCampoEspecifico()">
                            {{#tiposUsuario}}
                            <option value="{{.}}">{{.}}</option>
                            {{/tiposUsuario}}
                        </select>
                    </div>

                    <div class="mb-3" id="campoEspecifico">
                        <label for="identificadorEspecifico" class="form-label">Número de Socio</label>
                        <input type="text" class="form-control" id="identificadorEspecifico" name="identificadorEspecifico" required>
                    </div>

                    <button type="submit" class="btn btn-primary">Registrar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function mostrarCampoEspecifico() {
    const tipoUsuario = document.getElementById('tipoUsuario').value;
    const campoEspecifico = document.getElementById('campoEspecifico');
    const label = campoEspecifico.querySelector('label');
    const input = campoEspecifico.querySelector('input');

    if (tipoUsuario === 'NORMAL') {
        label.textContent = 'Número de Socio';
        input.name = 'identificadorEspecifico';
    } else {
        label.textContent = 'Identificador de Empleado';
        input.name = 'identificadorEspecifico';
    }
}
</script>
{{/content}}

{{/layout}} 